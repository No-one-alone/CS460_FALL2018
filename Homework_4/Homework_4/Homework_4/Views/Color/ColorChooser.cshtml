
@{
    ViewBag.Title = "ColorChooser";
}

<h2>Create a New Color</h2>

<h3>Please enter colors in HTML hexadecimal format: #AABBCC</h3>

@using (Html.BeginForm("ColorChooser", "Color", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("first_color", "First Color")
        @Html.TextBox("first_color", null, htmlAttributes: new { @class = "form-control", pattern = "#[0-9A-Fa-f]{ 3, 6}", type = "text", placeholder = "#eeffdd", required = "required" })


    </div>

    <div class="form-group">

        @Html.Label("second_color", "Second Color")
        @Html.TextBox("second_color", null, htmlAttributes: new { @class = "form-control", pattern = "#[0-9A-Fa-f]{3,6}", type = "text", placeholder = "#eeffdd", required = "required" })

    </div>

    <button type="submit" value="" class="btn btn-primary">Mix Colors</button>


}

